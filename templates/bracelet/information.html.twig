{% extends 'base.html.twig' %}

{% block title %}Bracelet Information{% endblock %}

{% block body %}
<div class="container">
    <h1>Bracelet Information</h1>

    <div class="form-group">
        <label>Temperature:</label>
        <span>{{ bracelet.temperature }}</span>
    </div>

    <div class="form-group">
        <label>Blood Pressure:</label>
        <span>{{ bracelet.bloodPressure }}</span>
    </div>

    <div class="form-group">
        <label>Heart Rate:</label>
        <span>{{ bracelet.heartRate }}</span>
    </div>

    <div class="form-group">
        <label>Movement:</label>
        <span>{{ bracelet.movement }}</span>
    </div>

    <div class="form-group">
        <label>GPS:</label>
        <span>{{ bracelet.gps }}</span>
    </div>

    <div class="form-group">
        <label>Latitude:</label>
        <span>{{ bracelet.latitude }}</span>
    </div>

    <div class="form-group">
        <label>Longitude:</label>
        <span>{{ bracelet.longitude }}</span>
    </div>

    <a href="{{ path('app_owner_dashboard') }}" class="btn btn-primary">Back to Dashboard</a>
</div>
{% endblock %}
