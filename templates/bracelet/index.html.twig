{# templates/bracelet/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Bracelets{% endblock %}

{% block body %}
    <h1>List of Bracelets</h1>
    
    <form action="{{ path('app_bracelet') }}" method="post">
        <label for="braceletId">Select a bracelet:</label>
        <select name="braceletId" id="braceletId">
            {% for braceletId, braceletForm in braceletForms %}
                <option value="{{ braceletId }}">{{ braceletId }}</option>
            {% endfor %}
        </select>
        <button type="submit" name="showInformation">Show Information</button>
    </form>
{% endblock %}
