{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr: {
                pattern: '^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{6,}$',
                title: 'Password must contain at least one uppercase letter, one lowercase letter, and one digit, and be at least 6 characters long.'
            }
        }) }}
        {{ form_row(registrationForm.confirmPassword, {
            label: 'Confirm Password'
        }) }}
        {{ form_row(registrationForm.profilePicture) }}
        {{ form_row(registrationForm.agreeTerms) }}
        {{ form_row(registrationForm.role) }}

        {% if registrationForm.bracelet is defined %}
            {{ form_row(registrationForm.bracelet) }}
        {% endif %}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
