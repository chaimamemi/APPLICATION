

{% block body %}
    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
        <div class="bg-light rounded p-5">
            <h2 class="text-center mb-4">Register</h2>
            <form action="{{ path('app_register') }}" method="post" novalidate>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Your First Name', 'pattern': '.{2,}', 'title': 'Your First Name must be at least 2 characters long.'}}) }}
                            <label for="firstName">Your First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Your Last Name', 'pattern': '.{2,}', 'title': 'Your Last Name must be at least 2 characters long.'}}) }}
                            <label for="lastName">Your Last Name</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Your Email', 'type': 'email', 'title': 'Please enter a valid email address.'}}) }}
                            <label for="email">Your Email</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Your Phone Number', 'pattern': '[0-9]{10}', 'title': 'Please enter a 10-digit phone number without spaces or dashes.'}}) }}
                            <label for="phoneNumber">Your Phone Number</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control', 'placeholder': 'Your Password', 'pattern': '^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d).{6,}$', 'title': 'Password must contain at least one uppercase letter, one lowercase letter, and one digit, and be at least 6 characters long.'}}) }}
                            <label for="plainPassword">Password</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.confirmPassword, {'label': 'Confirm Password', 'attr': {'class': 'form-control', 'placeholder': 'Confirm Password', 'pattern': '.{6,}', 'title': 'Please enter at least 6 characters for the password confirmation.'}}) }}
                            <label for="confirmPassword">Confirm Password</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.profilePicture, {'attr': {'class': 'form-control'}}) }}
                            <label for="profilePicture">Profile Picture</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.role, {'attr': {'class': 'form-select'}}) }}
                            <label for="role">Role</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input', 'required': 'required'}}) }}
                            <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">Agree to Terms</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
