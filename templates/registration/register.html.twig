{% extends 'base-back.html.twig' %}

{% block header %}
    {# Your header content here #}
{% endblock %}

{% block sidebar %}
    {# Your sidebar content here #}
{% endblock %}

{% block body %}
<div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <div class="d-flex justify-content-center py-4">
                        <a href="{{path('app_login')}}" class="logo d-flex align-items-center w-auto">
                            <img src="{{asset('Back-office/img/logo.png')}}" alt="Logo">
                            <span class="d-none d-lg-block">LifeLineHope</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                <p class="text-center small">Enter your personal details to create an account</p>
                            </div>

                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.gender, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.birthdate, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-lg-12">
                                    {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
                                </div>

                            </div>
                            <div class="row">
                            <br/>
                                <div class="col-lg-12">
                                    {{ form_row(form.register, {'attr': {'class': 'btn btn-primary w-100'}}) }}
                                </div>
                            </div>
                            
                            {{ form_end(form) }}
                        </div>
                    </div>

                    <div class="credits">
                        <div class="col-12">
                            <p class="small mb-0">Already have an account? <a href="{{path('app_login')}}">Log in</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block footer %}
    {# Your footer content here #}
{% endblock %}
