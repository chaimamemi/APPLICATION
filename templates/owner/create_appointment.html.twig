{%extends'chat.html.twig'%}

{% block body %}
<style>
    /* Style pour le conteneur */
    .container {
        background-image: url('back-office/img/appointment.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Style pour la carte */
    .card {
        max-width: 600px; /* Largeur maximale de la carte */
        background-color: rgba(255, 255, 255, 0.9); /* Fond de la carte avec transparence */
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); /* Ombre légère */
    }

    /* Style pour le titre de la carte */
    .card-header {
        background-color: #007bff;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    /* Style pour le corps de la carte */
    .card-body {
        padding: 30px;
    }

    /* Style pour les champs de formulaire */
    .form-group {
        margin-bottom: 20px;
    }

    /* Style pour les boutons */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
        font-size: 20px; /* Taille de la police */
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    /* Style pour l'écriture en gras */
    .text-bold {
        font-weight: bold;
    }
</style>

<div class="container">
    <div class="col-md-8"> <!-- Utiliser col-md-8 pour une largeur de formulaire plus grande -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">MAKE APPOINTMENT</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(form.dateTime, 'Date & Time', {'label_attr': {'class': 'text-primary text-bold'}}) }}
                    {{ form_widget(form.dateTime, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'text-primary text-bold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.doctor, 'Doctor', {'label_attr': {'class': 'text-primary text-bold'}}) }}
                    {{ form_widget(form.doctor, {'attr': {'class': 'form-control'}}) }}
                </div>
               
                <!-- Affichage du prénom, du nom de famille et de l'e-mail de l'utilisateur -->
                <div class="form-group">
                    <label for="firstName" class="text-primary text-bold">First Name:</label>
                    <input type="text" id="firstName" value="{{ app.user.firstname }}" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label for="lastName" class="text-primary text-bold">Last Name:</label>
                    <input type="text" id="lastName" value="{{ app.user.lastname }}" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label for="email" class="text-primary text-bold">Email:</label>
                    <input type="text" id="email" value="{{ app.user.email }}" class="form-control" readonly>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
