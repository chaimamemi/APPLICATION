

{% block body %}
<div class="container">
    <h1 class="my-4">Doctor Dashboard</h1>
    <div class="row">
        <div class="col-md-8">
            <!-- Liens vers la gestion des médicaments -->
            <h3>Medications Management</h3>
            <ul>
                <li><a href="{{ path('app_medication_index') }}">View Medications</a></li>
                <li><a href="{{ path('app_medication_new') }}">Add New Medication</a></li>
            </ul>
            
            <!-- Liens vers la gestion des données biologiques -->
            <h3>Biological Data Management</h3>
            <ul>
                <li><a href="{{ path('app_biological_data_index') }}">View Biological Data</a></li>
                <li><a href="{{ path('app_biological_data_new') }}">Add New Biological Data</a></li>
            </ul>
            
            <!-- Liste des rendez-vous -->
            <h3>Appointment Requests</h3>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Date & Time</th>
                            <th scope="col">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for appointment in appointments %}
                        <tr>
                            <td>{{ appointment.patient.firstName }}</td>
                            <td>{{ appointment.patient.lastName }}</td>
                            <td>{{ appointment.patient.email }}</td>
                            <td>{{ appointment.dateTime|date('Y-m-d H:i:s') }}</td>
                            <td>{{ appointment.description }}</td>
                            <td>
                                <form method="post" action="{{ path('confirm_appointment', {'id': appointment.id}) }}">
                                    <button type="submit" class="btn btn-success">Accept</button>
                                </form>
                                <form method="post" action="{{ path('reject_appointment', {'id': appointment.id}) }}">
                                    <button type="submit" class="btn btn-danger">Reject</button>
                                </form>
                              
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<a href="{{ path('app_doctor_calendar') }}" class="btn btn-primary">View Doctor Calendar</a>
<div class="mt-3">
    <a href="{{ path('calendar_index') }}" class="btn btn-info">Manage Calendars</a>
</div>

 <!-- Liens vers la statistiques -->
<h3>Statistics</h3>
<ul>
    <li><a href="{{ path('app_doctor_statistical') }}">View Statistics</a></li>
</ul>
{% endblock %}
