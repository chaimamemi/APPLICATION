{% extends 'base.html.twig' %}

{% block title %}Alert{% endblock %}

{% block body %}
    <h1>Alert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alert.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ alert.timestamp ? alert.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AlertType</th>
                <td>{{ alert.alertType }}</td>
            </tr>
            <tr>
                <th>Severity</th>
                <td>{{ alert.severity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ alert.description }}</td>
            </tr>
            <tr>
                <th>Handled</th>
                <td>{{ alert.handled }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_alert_index') }}">back to list</a>

    <a href="{{ path('app_alert_edit', {'id': alert.id}) }}">edit</a>

    {{ include('alert/_delete_form.html.twig') }}
{% endblock %}
